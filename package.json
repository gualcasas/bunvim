{
  "name": "bunvim",
  "author": "wallpants",
  "type": "module",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Neovim bun client",
  "repository": {
    "type": "git",
    "url": "git://github.com/wallpants/bunvim.git"
  },
  "bin": {
    "bunvim": "src/cli/index.ts"
  },
  "exports": {
    "types": "./src/index.ts",
    "bun": "./src/index.ts"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "scripts": {
    "commit": "cz",
    "vi": "nvim",
    "format": "prettier **/*.{md,ts,yml} -w",
    "lint": "tsc && eslint . --ext ts --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "msgpackr": "^1.9.9",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/cz-commitlint": "^18.4.4",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "bun-types": "latest",
    "commitizen": "^4.3.0",
    "commitlint": "^18.6.0",
    "eslint": "^8.54.0",
    "prettier": "^3.2.4",
    "prettier-plugin-organize-imports": "^3.2.4",
    "semantic-release": "^22.0.8",
    "typescript": "^5.3.2"
  }
}
